package tesla;

import processing.core.PApplet;
import processing.core.PImage;

public class usuarioSinRegistrar {

	public PApplet app;
	private int posX;
	private int posY;
	private int tamX;
	private int tamY;
	private PImage pantRegistro;

	public usuarioSinRegistrar(int posX, int posY, int tamX, int tamY, PApplet app) {
		this.app = app;
		this.posX = posX;
		this.posY = posY;
		this.tamX = tamX;
		this.tamY = tamY;
	}

	public void crearRegistro() {
		pantRegistro = app.loadImage("tesla/imagenes/registro.jpg");
		app.image(pantRegistro, posX, posY, tamX, tamY);
	}

	public void cambioPagina() {
		if (app.mouseX > 36 && app.mouseX < 62 && app.mouseY > 46 && app.mouseY < 82) {

		}

		if (app.mouseX > 250 && app.mouseX < 390 && app.mouseY > 736 && app.mouseY < 776) {

		}
		
		

	}

	public int getPosX() {
		return posX;
	}

	public void setPosX(int posX) {
		this.posX = posX;
	}

	public int getPosY() {
		return posY;
	}

	public void setPosY(int posY) {
		this.posY = posY;
	}

	public int getTamX() {
		return tamX;
	}

	public void setTamX(int tamX) {
		this.tamX = tamX;
	}

	public int getTamY() {
		return tamY;
	}

	public void setTamY(int tamY) {
		this.tamY = tamY;
	}

	public PImage getPantRegistro() {
		return pantRegistro;
	}

	public void setPantRegistro(PImage pantRegistro) {
		this.pantRegistro = pantRegistro;
	}

}
